<body id="Chat-Home-Body" style="font-family: OSWALD;">

  <div id="main-chat-container">
    <nav class="navbar fixed-top navbar-light" id="Chat-Home-Navbar">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          Serverless peer-to-peer chat platform.
        </a>
        <!-- HTML !-->
        <div class="d-flex justify-content-right flex-nowrap">
          <div class="button-content" style="margin-right: 20px;">
            <img src="images/user.png" alt="Profile Image" width="25" height="25" id="profile-setting-button"
              data-bs-toggle="modal" data-bs-target="#Profile-Modal">
          </div>
        </div>
    </nav>
    <div class="vh-75" id="Chat-Home-User-Outer-Container">
      <div class="list-group-flush" id="Chat-Home-User-List-Container">
        <div class="inbox-message">
          <ul id="User-List">
          </ul>
        </div>
      </div>
    </div>
